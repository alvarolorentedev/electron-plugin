{
  "name": "electron-plugin",
  "version": "1.1.22",
  "description": "an electron/node plugin architecture enabler",
  "main": "src/index.js",
  "scripts": {
    "start": "node .",
    "example": "node ./example/example.js",
    "test": "jest test/unit && yarn test:int",
    "test:dev": "jest --watchAll test/unit",
    "test:int": "node test/integration/*",
    "test:cov": "jest --coverage test/unit && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && yarn test:int",
    "push": "yarn test && git push",
    "deploy:major": "yarn version --major",
    "deploy:minor": "yarn version --minor",
    "deploy:patch": "yarn version --patch",
    "deploy:push": "git push && git push --tags",
    "preversion": "yarn test"
  },
  "keywords": [
    "plugin",
    "node",
    "electron",
    "extensibility",
    "architecture"
  ],
  "repository": "git@github.com:kanekotic/electron-plugin.git",
  "author": "kanekotic <alvarojosepl@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "array-peek": "1.0.22",
    "npm": "6.8.0"
  },
  "devDependencies": {
    "coveralls": "3.0.3",
    "faker": "4.1.0",
    "jest": "24.1.0",
    "tape": "4.10.1"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*-test.js"
    ],
    "testEnvironment": "node",
    "automock": false
  }
}
